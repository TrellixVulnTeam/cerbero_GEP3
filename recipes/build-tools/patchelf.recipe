import os

class Recipe(recipe.Recipe):
    name = 'patchelf'
    version = '0.10'
    licenses = [License.GPLv3Plus]
    stype = SourceType.TARBALL
    url = 'https://github.com/NixOS/patchelf/archive/{0}.tar.gz'.format(version)
    tarball_checksum = 'b3cb6bdedcef5607ce34a350cf0b182eb979f8f7bc31eae55a93a70a3f020d13'
    deps = ['autoconf', 'automake']
    autoreconf = True

    files_bin = ['bin/patchelf']
    files_share = ['share/doc/patchelf', 'share/man/man1/patchelf.1']

    def prepare(self):
        if self.config.distro_version == DistroVersion.REDHAT_6:
            if not os.path.isdir('/opt/rh/devtoolset-7/root/usr/bin'):
                raise FatalError('Pakage "devtoolset-7" not found in Centos6')

            self.set_env('PATH', '/opt/rh/devtoolset-7/root/usr/bin:%s' % os.environ['PATH'])
            self.set_env('LD_LIBRARY_PATH', '/opt/rh/devtoolset-7/root/usr/lib64:/opt/rh/devtoolset-7/root/usr/lib:%s' %
                        os.environ['LD_LIBRARY_PATH'])

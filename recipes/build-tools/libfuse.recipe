class Recipe(recipe.Recipe):
    name = 'libfuse'
    version = '2.9.2'
    licenses = [License.LGPLv2Plus]
    stype = SourceType.TARBALL
    tarball_dirname = 'fuse-%(version)s'
    url = 'https://github.com/libfuse/libfuse/releases/download/fuse_2_9_4/fuse-2.9.2.tar.gz'
    def prepare(self):
        self.configure_options += ' --disable-example'
        self.new_env['MOUNT_FUSE_PATH'] = os.path.join(self.config.prefix, 'sbin')
        self.new_env['INIT_D_PATH'] = os.path.join(self.config.prefix, 'etc', 'init.d')
        self.new_env['UDEV_RULES_PATH'] = os.path.join(self.config.prefix, 'etc', 'udev', 'rules.d')
